<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/settings_render_hint_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/settings_render_hint"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/settings_render_hint_help_ib"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        style="@style/AppTheme.ImageButton"
        android:id="@+id/settings_render_hint_help_ib"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="6dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/mt_icon_help"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/settings_render_hint_tv"/>

    <TextView
        android:id="@+id/settings_renderer_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_render_hint_tv"
        android:layout_marginTop="12dp"
        android:text="@string/settings_renderer"/>

    <Spinner
        android:id="@+id/settings_renderer_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_renderer_tv"/>

    <TextView
        android:id="@+id/settings_vulkan_driver_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_renderer_s"
        android:text="@string/settings_vulkan_driver"/>

    <Spinner
        android:id="@+id/settings_vulkan_driver_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_vulkan_driver_tv"/>

    <TextView
        android:id="@+id/settings_resolution_scale_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_vulkan_driver_s"
        android:text="@string/settings_resolution_scale"/>

    <TextView
        android:id="@+id/settings_resolution_scale_percent_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/settings_resolution_scale_tv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="100%"/>

    <SeekBar
        android:id="@+id/settings_resolution_scale_sb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:min="25"
        android:max="100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_resolution_scale_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/settings_audio_api_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_resolution_scale_sb"
        android:text="@string/settings_audio_api"/>

    <Spinner
        android:id="@+id/settings_audio_api_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_audio_api_tv"/>

    <TextView
        android:id="@+id/settings_jargs_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="JVM arguments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_audio_api_s" />

    <ImageButton
        android:id="@+id/settings_jargs_info"
        android:scaleType="centerInside"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/mt_icon_help"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="About"
        app:layout_constraintStart_toEndOf="@id/settings_jargs_tv"
        app:layout_constraintTop_toTopOf="@id/settings_jargs_tv"
        app:layout_constraintBottom_toBottomOf="@id/settings_jargs_tv" />

    <EditText
        android:id="@+id/settings_jargs_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="-Xmx3G -Xms2G -Xmn1G"
        android:inputType="textMultiLine|textNoSuggestions"
        android:lines="2"
        android:maxLines="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_jargs_tv" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/settings_debug_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/settings_debug_mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_jargs_et" />

</androidx.constraintlayout.widget.ConstraintLayout>
