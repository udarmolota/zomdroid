<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/touchControlsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Touch control mode disables gamepad support and enables on-screen buttons only."
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/touchControlsSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable on-screen controls" />
</LinearLayout>
