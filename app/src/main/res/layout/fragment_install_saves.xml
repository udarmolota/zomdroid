<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/install_saves_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Instance label -->
    <TextView
        android:id="@+id/install_saves_instance_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/install_saves_instance_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Instance spinner -->
    <Spinner
        android:id="@+id/install_saves_instance_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/install_saves_instance_tv"/>

    <!-- ZIP label -->
    <TextView
        android:id="@+id/install_saves_zip_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/install_saves_zip_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/install_saves_instance_spinner"
        app:layout_constraintEnd_toStartOf="@id/install_saves_zip_help_ib" />

    <!-- Help button -->
    <ImageButton
        style="@style/AppTheme.ImageButton"
        android:id="@+id/install_saves_zip_help_ib"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/mt_icon_help"
        app:layout_constraintStart_toEndOf="@id/install_saves_zip_tv"
        app:layout_constraintTop_toTopOf="@id/install_saves_zip_tv"
        app:layout_constraintBottom_toBottomOf="@id/install_saves_zip_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintHeight_default="wrap" />

    <!-- Warning -->
    <TextView
        android:id="@+id/install_saves_zip_warning_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/install_saves_zip_warning"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/install_saves_zip_tv"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ZIP path -->
    <EditText
        android:id="@+id/install_saves_zip_path_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/game_instance_no_file_selected"
        android:enabled="false"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:inputType="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/install_saves_zip_warning_tv"
        app:layout_constraintEnd_toStartOf="@id/install_saves_browse_ib"/>

    <!-- Browse button -->
    <ImageButton
        style="@style/AppTheme.ImageButton"
        android:id="@+id/install_saves_browse_ib"
        android:src="@drawable/mt_icon_folder_open"
        app:layout_constraintTop_toTopOf="@id/install_saves_zip_path_et"
        app:layout_constraintBottom_toBottomOf="@id/install_saves_zip_path_et"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Import button -->
    <Button
        android:id="@+id/install_saves_install_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/install_saves_install"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/install_saves_zip_path_et"/>

    <!-- Export button -->
    <Button
        android:id="@+id/install_saves_export_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/install_saves_export"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/install_saves_install_btn"/>



</androidx.constraintlayout.widget.ConstraintLayout>
